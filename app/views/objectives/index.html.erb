<h1>Listado de objectivos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Peso</th>
    <th>Perspectiva</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @objectives.each do |objective| %>
  <tr>
    <td><%= objective.name %></td>
    <td><%= objective.weight %></td>
    <td><%= Perspective.find(objective.perspective_id).name %></td>
    <td><%= link_to 'Show', objective %></td>
    <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
    <td><%= link_to 'Destroy', objective, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

