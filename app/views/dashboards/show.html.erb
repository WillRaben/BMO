<h2>Dashboard de<%=h @tc %> (<%=h scoredate_month_to_text(@sc)%>/<%=h @sc.year%>) </h2>
<% if @type == "current" %>
  <h3><%= link_to "Ver tendencias", showdashboard_path(@category, "trend", @individual.id, @sc.id)%></h3>
<% end %>
<% if @type == "trend" %>
  <h3><%= link_to "Ver actual", showdashboard_path(@category, "current", @individual.id, @sc.id)%></h3>
<% end %>

</h2>

<div class="row-fluid">
  <div class="span12" align="center">
    <div id="mychart"></div>
    <%= render_chart(@mychart, "mychart") %>
    <%=h @individual.name %>
  </div><!--span4-->
</div>

<br/>

<% i = 0%>
  <div class="row-fluid">
    <% @charts.each do |p|%>
      <div class="span4" align="center">
        <div id=<%= "'chart" + i.to_s + "'"%>></div>
        <%= render_chart(p, "chart" + i.to_s) %>
        <%=h @sons[i].name %>
      </div><!--span4-->
      <% i = i + 1%>
      <% if i%3 == 0 %>
          </div><!--row-->
          <div class="row-fluid">
      <% end %>

    <% end %>
  </div>
