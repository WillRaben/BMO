<% @perspectives.each do |perspective| %>
  <tr>
    <td><%= perspective.name %></td>
    <td><%= perspective.weight %></td>
    <td><%= link_to 'Mostrar', perspective %></td>
    <td><%= link_to 'Editar', edit_perspective_path(perspective) %></td>
    <td><%= link_to 'Eliminar', perspective, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


