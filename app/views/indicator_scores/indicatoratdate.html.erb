<h2><%=h @indicator.name%></h2>
<h3>Medido en: Porcentaje</h3>

<div class="row">
    <div class="span4" align="center">
        <div id='chart'></div>
        <%= render_chart(@chart, 'chart') %>
    </div>

    <div class="span8" align="center">


          <div id='tablechart'></div>
          <%= render_chart @tablechart, 'tablechart' %>


    </br>
    <div class="row" align="left">        
      <h3>Indicadores: (<%= link_to "Ver juntos", exploreobjectives_path() %> )</h3>
        <OL TYPE="1">
          <% @currentsons.each do |cs|%>
            <LI><p><%= link_to cs.indicator.name, cs, :class => indicatorscorestate(ci)%></p>
          <% end %>
        </OL>
    </div>
</div>
</div>
</br>
