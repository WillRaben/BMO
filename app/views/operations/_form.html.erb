<%= form_for(@operation) do |f| %>
  <% if @operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
      <% @operation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :operator %><br />
    <%= f.text_field :operator %>
  </div>
  <div class="field">
        <%= f.label "Primer operando" %><br />
        <%=h collection_select(:operation, :firstoperand, RawDatum.all, :id, :name, :prompt => true) %>
  </div>
  <div class="field">
        <%= f.label "Segundo operando" %><br />
        <%=h collection_select(:operation, :secondoperand, RawDatum.all, :id, :name, :prompt => true) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
