<h2>Lista de Usuarios</h2></br>

	<table class="table">
		  <thead>
	      <tr>
	          <th>Nombre</th>
	          <th>Correo</th>
	          <th>Fecha de Registro</th>
	          <th>Rol</th>
	          <th></th>
	          <th></th>                                      
	      </tr>
	  </thead>   
	  <tbody>
	  <% @users.each do |user| %>
	    <tr>
	        <td><%= user.name %></td>
	        <td><%= user.email %></td>
	        <td><%= user.created_at.to_date %></td>
	        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
	        <td>
	          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" 														
				type="button">Cambiar rol</a>
	          <%= render user %>
	        </td>
	        <td><%= link_to("Borrar usuario", user_path(user), :data => { :confirm => "Esta seguro que desea 			
						eliminarlo?" }, 
						:method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>                                       
	    </tr>
	  <% end %>
	  </tbody>
	</table>
	</br>
	
	<%= link_to "Crear usuario", new_user_registration_path , class: "btn " %>
