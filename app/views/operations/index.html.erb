<h2>Listado de operaciones</h2>

<table>
  <tr>
    <th>Nombre</th>
    <th>Operador</th>
    <th>Primer operando</th>
    <th>Segundo operando</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @operations.each do |operation| %>
  <tr>
    <td><%= operation.name %></td>
    <td><%= operation.operator %></td>
    <td><%= operation.firstoperand.name %></td>
    <td><%= operation.secondoperand.name %></td>
    <td><%= link_to 'Mostrar', operation %></td>
    <td><%= link_to 'Editar', edit_operation_path(operation) %></td>
    <td><%= link_to 'Eliminar', operation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

