<h2>Listado de indicadores</h2>

<table>
  <tr>
    <th>Nombre</th>
    <th>Peso</th>
    <th>Objetivo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @indicators.each do |indicator| %>
  <tr>
    <td><%= indicator.name %></td>
    <td><%= indicator.weight %></td>
    <td><%= Objective.find(indicator.objective_id).name %></td>
    <td><%= link_to 'Mostrar', indicator %></td>
    <td><%= link_to 'Editar', edit_indicator_path(indicator) %></td>
    <td><%= link_to 'Eliminar', indicator, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

