<h1>Listing objective_scores</h1>

<table>
  <tr>
    <th>Objetivo</th>
    <th>Fecha</th>
    <th>Valor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @objective_scores.each do |objective_score| %>
  <tr>
    <td><%= objective_score.objective.name %></td>
    <td><%= objective_score.scoredate.month %>/<%= objective_score.scoredate.year %></td>
    <td><%= objective_score.score %></td>
    <td><%= link_to 'Show', objective_score %></td>
    <td><%= link_to 'Edit', edit_objective_score_path(objective_score) %></td>
    <td><%= link_to 'Destroy', objective_score, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

