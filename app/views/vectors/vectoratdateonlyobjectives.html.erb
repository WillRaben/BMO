<style>

img
{
vertical-align:middle;
}
</style>




<h2><%=h image_tag("bmo.png", :size => "100x70") %> Vector: <%=h @vector.name %> <font size="2"> (<%=h scoredate_month_to_text(@date)%>/<%=h @date.year%>)</h2>
<br>

<div class="row-fluid" align = "center">
  <%= link_to "Vista normal" , vectoratdate_path(@vector,@date) , :class => "btn" %>
  <%= link_to "Solo objetivos" , vectoratdateonlyobjectives_path(@vector,@date) , :class => "btn disabled" %>
  <%= link_to "Todos los datos" , vectoratdatecomplete_path(@vector,@date) , :class => "btn" %>
</div>
<br>

<table cellpadding="10" class="table table-bordered table-striped">        	
  <thead>
  	<tr>
      	<th width="5%">&nbsp;</th>
        <th width="95%" colspan = "2">Objetivos</th>
        <th>Unidad</th>
        <th>Valor</th>
        <th>Meta</th>
        <th>Avance</th>
        <th>Base</th>
        <th>Comp</th>
     </tr>
  </thead>
  <tbody>
    <% if @financiera.size > 0 %>
      <%=h onlyObjeWithOvals(@financiera,@date) %>
    <% end %>
    <% if @clientes.size > 0 %>
      <%=h onlyObjeWithOvals(@clientes,@date) %>
    <% end %>
    <% if @procesos.size > 0 %>
      <%=h onlyObjeWithOvals(@procesos,@date) %>
    <% end %>
    <% if @desarrollo.size > 0 %>
      <%=h onlyObjeWithOvals(@desarrollo,@date) %>
    <% end %>
  </tbody>
</table>

