<script>
$(document).ready(function(){
	
	$("#rol").change(obtenerRol);
});

function obtenerRol(){
	var selected = $("#rol option:selected");
	var output = "";
	if(selected.val() != 0){
		output = "Rol es " + selected.text();
	}
 }

$("#output").html(output)	

</script>


